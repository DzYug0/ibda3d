{
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(png|jpg|jpeg|svg|webp|ico)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=2592000, must-revalidate"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/products/:slug",
            "has": [
                {
                    "type": "header",
                    "key": "User-Agent",
                    "value": ".*(WhatsApp|bot|facebookexternalhit|Twitterbot|Pinterest|Googlebot|Baiduspider|YandexBot).*"
                }
            ],
            "destination": "/api/og?type=product&slug=:slug"
        },
        {
            "source": "/packs/:slug",
            "has": [
                {
                    "type": "header",
                    "key": "User-Agent",
                    "value": ".*(WhatsApp|bot|facebookexternalhit|Twitterbot|Pinterest|Googlebot|Baiduspider|YandexBot).*"
                }
            ],
            "destination": "/api/og?type=pack&slug=:slug"
        },
        {
            "source": "/sitemap.xml",
            "destination": "https://zgunrxduxkleoogrmdzs.supabase.co/functions/v1/sitemap"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}